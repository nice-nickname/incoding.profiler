{
  "root": true,

  "plugins": ["@typescript-eslint"],

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],

  "rules": {
    "no-console": [
      "warn",
      {
        "allow": ["error"]
      }
    ]
  }
}
